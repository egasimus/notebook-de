*
  position relative
  box-sizing border-box
  font-family monospace
  font-size 10px

html, body, #Root
  min-height 100%
  min-width 100%
  margin 0
  padding 0

body
  background #111116

.Workspace
  padding-right 16em
  flex-grow 1
  align-items stretch
  background #111116
  &Item
    padding 0 0 0.5em 0.5em
    margin-bottom 0.5em
    white-space pre
    overflow hidden
    background #181920
    &Title
      padding 0.75em 0.5em 0.75em 0
      color white
      line-height 1
      text-shadow 1px 1px 0 #000
      &Date
        color #cf0
        font-weight bold
      &Icon
        width 3em
        height 2em
        text-align center
        cursor pointer
        opacity 0.75
        &:hover
          background rgba(255,255,255,0.1)
          opacity 1
        & > svg
          width 100%
          height 100%

.Timeline
  position fixed
  z-index 1
  top 0
  bottom 0
  right 0
  width 16em
  user-select none
  padding 0.25em 0 0
  display flex
  flex-flow column
  background #0d0e0f

  &Item, .Time
    padding 0.5em
    line-height 1
    flex-shrink 0
    color #cf0
    &:hover
      background #181920
      cursor pointer
    &Command
      color white
      font-weight bold
      word-break break-all

  .Time
    font-weight bold

.FlexRow
  display flex
  flex-flow row

.FlexCol
  display flex
  flex-flow column

.FlexGrow
  flex-grow 1

.Prompt
  position fixed
  z-index 2
  bottom 0
  right 16em
  left 0
  background #181920
  display flex
  align-items center

  input
    background none
    border none
    margin 0
    padding 0.5em
    line-height 1em
    height 2em
    flex-grow 1
    color white
    font-weight bold

    &:focus
      outline none
