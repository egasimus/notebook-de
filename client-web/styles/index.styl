*
  position relative
  box-sizing border-box
  font-family monospace
  font-size 10px

html, body, #Root
  min-height 100%
  min-width 100%
  margin 0
  padding 0

body
  background #000

.Workspace
  padding-left 16em
  background #111
  &Item
    padding 0 0 0.5em 0.5em
    margin-bottom 0.5em
    white-space pre
    overflow hidden
    background #222
    &Title
      padding 0.75em 0
      color white
      line-height 1
      text-shadow 1px 1px 0 #000
      &Date
        color #cf0
        font-weight bold

.Timeline
  position fixed
  z-index 1
  top 0
  bottom 0
  left 0
  width 16em
  user-select none
  padding 0.5em 0
  display flex
  flex-flow column
  background #050505

  &Item, .Time
    padding 0.25em 0.5em
    line-height 1
    flex-shrink 0
    color #cf0
    &:hover
      background #201918
      cursor pointer
    &Command
      color white
      font-weight bold
      word-break break-all

  .Time
    font-weight bold

.FlexGrow
  flex-grow 1

.Prompt
  position fixed
  bottom 0
  left 16em
  right 0
  height 1.66em
  background #060504
  display flex
  align-items center

  input
    background none
    border none
    margin 0
    padding 0.25em 0
    line-height 1em
    height 1.5em
    flex-grow 1
    color white
    font-weight bold

    &:focus
      outline none
