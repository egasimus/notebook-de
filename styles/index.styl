*
  position relative
  box-sizing border-box
  font-family monospace
  font-size 10px
  color #c80

html, body, #Root
  min-height 100%
  min-width 100%
  margin 0
  padding 0

body
  background #000

.Timeline
  position fixed
  top 0
  bottom 1.66em
  left 0
  width 15em
  background #060504

.Prompt
  position fixed
  bottom 0
  left 0
  right 0
  height 1.66em
  background #060504
  display flex
  align-items center

  input
    background none
    border none
    margin 0 0 0 1em
    padding 0
    line-height 1.66em
    height 1.66em
    flex-grow 1

    &:focus
      outline none
